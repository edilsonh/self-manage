<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title></title>
  <link rel="stylesheet" href="/profile.css">
</head>
<body>
  {{ #user }}
  <div class="profile">
    <div class="image">
      <img src="https://robohash.org/blanditiisexercitationemquaerat.png?size=150x150&set=set1">
    </div>
    {{ #job }}
    <div class="info">
      <h1>{{ name }}</h1>
      <p>{{ city }}, {{ country }} | {{ . }}, {{ company }}</p>
      <p>{{ email }} | {{ phone }}</p>
    </div>
    {{ /job }}
    {{ ^job }}
    <div class="info">
      <h1>{{ name }}</h1>
      <p>{{ city }}, {{ country }} | <span id="hireme">Available For Hire</span></p>
      <p>{{ email }} | {{ phone }}</p>
    </div>
    {{ /job }}
    <div class="other-info">
      <p id='education'> Education: {{ university }}</p>
      <div id='skills'>
        <p> Skills:
          <ul>
            {{ #skills }}
            <li> {{ . }}</li>
            {{ /skills }}
          </ul>
        </p>
      </div>
    </div>
    <form class="" action="/delete/{{_id}}" method="post">
      <button type="submit" name="button">Delete</button>
    </form>
    <form class="" action="" method="post">
      <button type="submit" name="button">Edit</button>
    </form>
  </div>
  {{ /user }}
</body>

</html>
